    <style name="ThemeOverlay.Skripsian.BottomNav" parent="">
        <item name="colorPrimary">@color/green_700</item>
        <item name="colorOnPrimary">@color/gray_300</item>
    </style>

    <style name="ThemeOverlay.Skripsian.TextInputLayout" parent="">
