        <item name="textInputStyle">@style/Widget.Skripsian.TextInputLayout.Default</item>
        <!--        <item name="chipStyle">@style/Widget.Skripsian.Chip</item>-->
    </style>

    <style name="ThemeOverlay.Skripsian.AppBar" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="ThemeOverlay.Skripsian.Popup" parent="ThemeOverlay.MaterialComponents.Dark" />

    <style name="ThemeOverlay.Skripsian.Dialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/green_700</item>
        <item name="colorSecondary">@color/green_700</item>
    </style>

    <style name="ThemeOverlay.Skripsian.Calendar" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/green_700</item>
        <item name="colorSecondary">@color/green_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
